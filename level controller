    {
       SceneManager.LoadScene("lvl1");
    }
	  public void Lvl2()
    {
	    SceneManager.LoadScene("lvl2");
    }
    public void MainMenu()
    {
	    SceneManager.LoadScene("MainMenu");
    }
    public void Congrats()
    {
	    SceneManager.LoadScene("Congrats");
    }
}
